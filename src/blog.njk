---
layout: base.njk
title: Blog
permalink: /blog/
---
<section class="py-16 bg-base-200">
  <h1 class="text-3xl font-bold mb-8 text-center">Blog</h1>
  <p class="text-sm text-center text-base-content/70 mt-6">
    <a href="{{ '/feed.xml' | url }}" class="link">
      Subscribe via RSS
    </a>
  </p>
  <div class="space-y-8 container mx-auto px-64 py-16">
    {%- for post in collections.post | reverse -%}
      <article class="bg-base-100 rounded-lg shadow hover:shadow-md transition border border-base-300">
        <a href="{{ post.url | url }}" class="block p-6">
          <h2 class="text-2xl font-semibold text-brand hover:text-brand-dark mb-2">
            {{ post.data.title }}
          </h2>
          <p class="text-sm opacity-70 mb-3">
            {{ post.date | asPostDate }}
          </p>
          <p class="text-base text-base-content/80 line-clamp-3">
            {{ post.data.description or post.templateContent | striptags | truncate(200, true, '...') }}
          </p>
        </a>
      </article>
    {%- endfor -%}
  </div>

</section>